{
  "storage": {
    "rules": "storage.rules"
  },
  "hosting": {
    "public": "out", 
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "storage": {
      "port": 4001,
      "host": "127.0.0.1"
    }
  }
}